[Unit]
Description=Health Check Service
After=web-monitoring.service

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory=/home/mikhail/web-monitoring
Environment=HEALTH_CHECK_SERVICE_NAME=web-monitoring
Environment=HEALTH_CHECK_LOG_FILE=/var/log/service-health.log
Environment=HEALTH_CHECK_URL=http://localhost:8080
Environment=HEALTH_CHECK_TIMEOUT=5
ExecStart=/home/mikhail/web-monitoring/health-check.sh
StandardOutput=journal
StandardError=journal
